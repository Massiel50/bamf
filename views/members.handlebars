<a href="/movies" rel="noopener noreferrer"class="waves-effect waves-light btn">Search</a>


<div class="container">
        <!-- The container for user choices -->
        <ul class="collection z-depth-5">
            <li class="collection-header">
                <h4>{{user.firstname}}'s Movies List</h4>
            </li>

            {{#each user.userMovies}}
            <li class="collection-item avatar">
                <img src={{poster}} alt="" class="circle">
                <span class="title">{{title}}</span>
                <p>
                    {{plot}}
                </p>
                <a class="waves-effect waves-light btn dbtn">Delete</a>
                <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
            </li>
            {{/each}}
            
        </ul>
    </div>