<header>
  <!-- Nav bar -->
  <div class="navbar-fixed">
    <nav>
      <div class="nav-wrapper black lighten-2">
        <a href="/members" class="brand-logo">BaMF</a>
        <ul class="right hide-on-med-and-down">
          {{!-- <li><a class="center" href="/members">HOME</a></li> --}}
          <li><a class="center" href="/movies">SEARCH</a></li>
          <li><a id="logoutBtn" class="center" href="/logout">LOG OUT</a></li>
        </ul>
      </div>
    </nav>
  </div>
  {{!-- </header><a href="/movies" rel="noopener noreferrer"class="waves-effect waves-light btn">Search</a> --}}
  <br>

  <div class="container">
    <!-- The container for user choices -->
    <ul class="collection z-depth-5">
      <li class="collection-header">
        <h4>{{user.firstname}}'s Movies List</h4>
      </li>

      {{#each userMovies}}
      <li class="collection-item avatar">
        <img src={{userMovies.poster}} alt="" class="circle">
        <span class="title">{{userMovies.title}}</span>
        <p>
          {{plot}}
        </p>
        <a class="waves-effect waves-light btn" href="/" id="dbtn">Delete</a>
        <a href="#!" class="secondary-content"><i class="material-icons">grade</i></a>
      </li>
      {{/each}}

    </ul>
  </div>